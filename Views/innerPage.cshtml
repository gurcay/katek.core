@using Umbraco.Cms.Web.Common.PublishedModels;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage
@{
    Layout = "mainTemplate.cshtml";
    var root = Model.AncestorsOrSelf().Last();
    string image = "https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcQeJQeJyzgAzTEVqXiGe90RGBFhfp_4RcJJMQ&s";
    string bgImage = "https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcQeJQeJyzgAzTEVqXiGe90RGBFhfp_4RcJJMQ&s";
    int pageCount = 1;
    if(Model.HasValue("pageImage"))
    {
        image = Model.Value<Umbraco.Cms.Core.Models.MediaWithCrops>("pageImage").Url().ToString();
    }

    if(Model.HasValue("pageBgImage"))
    {
        bgImage = Model.Value<Umbraco.Cms.Core.Models.MediaWithCrops>("pageBgImage").Url().ToString();
    }
    
    if(Model.Parent.ContentType.Alias == "pageFolder")
    {
        pageCount = Model.Parent.Children().Count();
    }

}
<div class="content">
    <!--fixed-column-wrap-->
    <div class="fixed-column-wrap">
        <div class="pr-bg"></div>
        <!--fixed-column-wrap-content-->
        <div class="fixed-column-wrap-content">
            <div class="scroll-nav-wrap color-bg">
                <div class="carnival">@Umbraco.GetDictionaryValue("page.Scroll")</div>
                <div class="snw-dec">
                    <div class="mousey">
                        <div class="scroller"></div>
                    </div>
                </div>
            </div>
            <div class="bg" data-bg="@bgImage"></div>
            <div class="overlay"></div>
            <div class="progress-bar-wrap bot-element">
                <div class="progress-bar"></div>
            </div>
            <!--fixed-column-wrap_title-->
            <div class="fixed-column-wrap_title first-tile_load">
                <h2>@Model.Name.ToString().Split(' ').First().ToUpper() @(!Model.Name.ToString().Contains(" ") ? "" : Html.Raw("<br>" + Model.Name.ToString().Split(' ').Last().ToUpper()))</h2>
               
            </div>
            <!--fixed-column-wrap_title end-->
            <div class="fixed-column-dec"></div>
        </div>
        <!--fixed-column-wrap-content end-->
    </div>
    <!--fixed-column-wrap end-->
    <!--column-wrap--> 
    <div class="column-wrap">
        <!--column-wrap-container -->   
        <div class="column-wrap-container fl-wrap">
            <div class="col-wc_dec">
                <div class="pr-bg pr-bg-white"></div>
            </div>
            <div class="col-wc_dec col-wc_dec2">
                <div class="pr-bg pr-bg-white"></div>
            </div>
            <!--section--> 
            <section   class="small-padding">
                <div class="container">
                    <div class="split-sceen-content_title fl-wrap">
                        <div class="pr-bg pr-bg-white"></div>
                        <h3>@Model.Name.ToString().ToUpper()</h3>
                     
                    </div>
                    <div class="column-wrap-content fl-wrap">
                        <div class="column-wrap-media fl-wrap">
                            <div class="pr-bg pr-bg-white"></div>
                            <img src="@image"  class="respimg" alt="@Model.Name">
                            
                        </div>
                        <div class="serv-text fl-wrap">
                            <div class="pr-bg pr-bg-white"></div>
                            <div class="row">
                                <div class="col-md-12">
                                    @Html.Raw(Model.Value("pageText"))
                                </div>
                                
                            </div>
                        </div>
                    </div>
                    <div class="section-number right_sn">
                        <div class="pr-bg pr-bg-white"></div>
                        <span>0</span>@pageCount.
                    </div>
                </div>
            </section>
            <!--section end--> 
            <div class="section-separator"></div>
            <!--section--> 
            
            <!--section end-->
            <div class="section-separator"></div>
            <!--section--> 
            
            <!--section end-->    
            <div class="section-separator"></div>
            <div class="clearfix"></div>
            
        </div>
        <!--column-wrap-container end-->         
    </div>
    <!--column-wrap end--> 
    <div class="limit-box fl-wrap"></div>
</div>